# HiggsNode Configuration
# Copy this file to .env and configure as needed

# BosonServer Configuration
BOSON_SERVER_URL=https://mail.highfunk.uk
BOSON_SERVER_TIMEOUT=30000
BOSON_SERVER_RETRY_ATTEMPTS=3
BOSON_SERVER_RETRY_DELAY=1000

# Node Configuration
# NODE_ID will be auto-generated if not set
# NODE_ID=
# NODE_PUBLIC_KEY will be auto-generated if not set
# NODE_PUBLIC_KEY=
# NODE_PRIVATE_KEY will be auto-generated if not set
# NODE_PRIVATE_KEY=

# WireGuard Configuration
WG_INTERFACE_NAME=higgsnode0
WG_PORT=51820
WG_ADDRESS=10.0.0.1/24
# WG_CONFIG_PATH= (optional, defaults to platform-specific config directory)

# Heartbeat Configuration
HEARTBEAT_INTERVAL=30

# Metrics Configuration
METRICS_COLLECTION_INTERVAL=10

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/higgsnode.log

# Resource Limits
MAX_CONNECTIONS=100
MAX_CPU_USAGE=80
MAX_MEMORY_USAGE=80

# Privacy Configuration
LOG_TRAFFIC=false
LOG_DNS=false
LOG_METADATA=true
ANONYMIZE_IPS=true
MAX_LOG_RETENTION_DAYS=7
